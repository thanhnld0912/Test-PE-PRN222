@page
@model InnocodeWeb.Pages.Projects.CreateModel
@{
    ViewData["Title"] = "Create Project";
}

<h2>Create Project</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Project.TeamId" class="control-label"></label>
        <select asp-for="Project.TeamId" class="form-control"
                asp-items="@(ViewData["TeamId"] as SelectList)"></select>
        <span asp-validation-for="Project.TeamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Project.Title" class="control-label"></label>
        <input asp-for="Project.Title" class="form-control" />
        <span asp-validation-for="Project.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Project.Summary" class="control-label"></label>
        <textarea asp-for="Project.Summary" class="form-control"></textarea>
        <span asp-validation-for="Project.Summary" class="text-danger"></span>
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
